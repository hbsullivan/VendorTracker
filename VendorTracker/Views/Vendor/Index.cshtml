<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Vendor Tracker</title>
    <link 
      rel="stylesheet" 
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" 
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" 
      crossorigin="anonymous">
      <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
  </head>
  <body>
   @using VendorTracker.Models;

   <h1>Vendors</h1>
   @if (Model.Count == 0)
   {
    <h3>No Vendors have been added yet!</h3>
   }
    <ul>
   @foreach (Vendor vendor in Model)
   {
    <li><a href='/vendors/@vendor.Id'>@vendor.Name</a></li>
    <ul>
      <li>@vendor.Description</li>
    </ul>
   }
    </ul>
   <p><a href='/vendors/new'>Add a new Vendor</a></p>
   <br>
   <p><a href='/'>Back Home</a></p>
  </body>
</html>