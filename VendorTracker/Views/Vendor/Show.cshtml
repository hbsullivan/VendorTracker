<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Vendor Tracker</title>
    <link 
      rel="stylesheet" 
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" 
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" 
      crossorigin="anonymous">
      <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
  </head>
  <body>
    @using VendorTracker.Models;

    <h3>Here are all the orders from this vendor</h3>

    @if (Model["orders"].Count ==0 )
    {
      <h4>This Vendor hasn't placed any orders</h4>
    }

  
    @foreach (Order order in @Model["orders"])
    {
      <p><u>@order.Title</u></p>
      <ul>
        <li>@order.Description</li>
        <li>$@order.Price</li>
        <li>@order.Date</li>
      </ul>
    }
    
    <p><a href='/vendors/@Model["vendors"].Id/orders/new'>Create a new order</a></p>
    <p><a href='/vendors'>Return to Vendor list</a></p>
    <p><a href='/'>Return to Home Page</a></p>
  </body>
</html>